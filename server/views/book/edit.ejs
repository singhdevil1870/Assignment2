<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<body style="background-color: darkgrey ; color: black;">
<!-- Content for the Add page -->
<div class="container" style="background-color: grey ;">
    <div class="row">
        
            <h1>Update the existing Contacts</h1>

            <form class="form" method="POST">
                <div class="form-group">
                  <br>
                  <br>
                    <label for="nameTextField">Contact Name:</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter your Contact Name"
                    name="name" 
                    value="<%= book.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Contact Number:</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter your Contact Number"
                    name="author" 
                    value="<%= book.author %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Email Address:</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter you Email Address"
                    name="published" 
                    value="<%= book.published %>"
                    required>
                </div>
                <br>

                

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
            <img src="/Assets/images/edit.jpeg" style="height: 400px; ; width: 700px; float: left;">
        

    </div>
</div>
</body>

