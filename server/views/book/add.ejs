<body style="background-color: darkgrey ; color: black;">
<!-- Content  for the add page -->
<!-- <a class="navbar-brand" href="/"> <img src="Assets\images\logo.jpeg" width="110" height="60"></a> -->
<div class="container" style="background-color: grey ;">
  <div class="row">
      <h1>Add a new Contact</h1><br><br><br>



      <form class="form" method="post">


        <br>
        <br>
        <div class="from-group">
          <label for="nameTextField">Contact Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter your Contact Name:"
            name="name"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Contact Number</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter your Contact Number:"
            name="author"
            required
          />
        </div>

        <div class="from-group">
          <label for="publishedTextField">Email Address</label>
          <input
            type="text"
            class="form-control"
            id="publishedTextField"
            placeholder="Enter your Email Adress:"
            name="published"
            required
          />
        </div>
        <br>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/book-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
      <img src="/Assets/images/add.png" style="height: 300px; ; width: 600px; float: left;">

  </div>
</div>
</body>
